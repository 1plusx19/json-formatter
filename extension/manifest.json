{
  "name": "JSON Formatter",
  "version": "0.5",
  "manifest_version": 2,
  "description": "Makes JSON easy to read.",
  "homepage_url": "https://github.com/callum85/json-formatter",
  "minimum_chrome_version": "21",
  "icons": {
       "128": "icons/128.png",
       "32": "icons/32.png"
  },
  "background": {
    "scripts": ["js/background.js"]
    //,"persistent": false // not yet supported
  },
  "content_scripts": [
    { "matches": ["<all_urls>"], "js": ["js/content.js"], "run_at": "document_start" }
  ],
  "permissions":["tabs", "*://*/*", "<all_urls>"]
}